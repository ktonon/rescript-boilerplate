{
  "name": "rescript-boilerplate",
  "version": "1.0.0",
  "description": "Basic ReScript project with unit testing",
  "main": "src/Boilerplate.res.mjs",
  "type": "module",
  "scripts": {
    "preres:test": "npm run res:build",
    "res:test": "retest test/*Test.res.mjs",
    "res:test:watch": "nodemon --ext res --exec \"npm run res:test\"",
    "res:build": "rescript",
    "res:clean": "rescript clean",
    "res:dev": "rescript -w"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@rescript/core": "^1.5.2",
    "rescript": "^11.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "rescript-test": "^7.0.1"
  }
}
